<?xml version="1.0" encoding="utf-8" ?>

<included>
    <property name="home" value="/home/ubuntu/logs/tomcat/" />

    <!--  appender이름이 console consoleAppender를 선언  -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppenderr">

        <!--   해당 로깅의 패턴을 설정   -->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>
</included>
